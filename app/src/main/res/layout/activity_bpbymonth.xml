<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/personhead"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#8B795E"
        android:orientation="horizontal">
        <!--tools:layout_editor_absoluteX="8dp"-->
        <!--tools:layout_editor_absoluteY="0dp">-->

        <ImageView
            android:id="@+id/bpbymonthtomain"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:paddingRight="53dp"
            android:layout_marginTop="37dp"
            android:layout_weight="1"
            android:src="@drawable/back" />

        <TextView
            android:layout_marginTop="13dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="最近30次血压变化"
            android:textColor="#fff"
            android:textSize="16sp" />
        <!--android:layout_centerVertical="true" android:layout_marginTop="45dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <ImageView
            android:id="@+id/knowledge_month"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:paddingLeft="50dp"
            android:layout_marginTop="37dp"
            android:layout_weight="1"
            android:src="@drawable/knowledge" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#8B795E">
        <com.github.mikephil.charting.charts.LineChart
            android:background="#8B795E"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/bymonthchart1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.github.mikephil.charting.charts.LineChart
            android:background="#8B795E"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/bymonthchart2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp" />
    </LinearLayout>
</LinearLayout>